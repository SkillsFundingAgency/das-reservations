@model EmployerAgreementNotSignedViewModel

@{
    ViewBag.Title = "Employers agreement is not signed";
}
@if (Model.IsUrl)
{
    <a href="@Model.BackUrl" class="govuk-back-link">Back</a>    
}
else
{
    <a asp-route="@RouteNames.ProviderChooseEmployer" class="govuk-back-link">Back</a>
}
<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <h1 class="govuk-heading-xl">@Model.AccountName has not accepted their employer agreement</h1>

            <p class="govuk-body">@Model.AccountName must accept their employer agreement with the Education and Skills Funding Agency (ESFA) before they can reserve or manage funding.</p>
            <p class="govuk-body">They can view their agreement in 'your organisations and agreements' within their apprenticeship service account.</p>
           
           <a href="@Model.DashboardUrl" role="button" draggable="false" class="govuk-button" tabindex="1">Return to homepage</a> 

        </div>
    </div>
</main>